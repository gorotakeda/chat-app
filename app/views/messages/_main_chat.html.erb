<div class="chat-header">
  <div class="group">
   <%= @room.name %>
  </div>
  <div class="chat-end">
   <%= link_to "チャットを終了する" , room_path(@room), method: :delete %>
   <%# 削除するチャットルームを区別するために、定義している@roomを引数にし、room_path(@room)と指定しましょう。 %>
   <%# HTTPメソッドのdeleteを指定すると、roomsコントローラーのdestroyアクションが実行されます。 %>
  </div>
</div>

<div class="chat-main">
  <%= render partial: 'message', collection: @messages %>
  <%# _message.html.erbを部分テンプレートとして、読み込むことができます。 %>
</div>

<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="input-form">
   <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
   <label class="image-form">
     <span class="image-file">画像</span>
     <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit-form' %>
<% end %>